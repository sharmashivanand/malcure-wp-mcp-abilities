{
  "name": "wordpress/mcp-adapter-plugin",
  "description": "WordPress plugin wrapper for Abilities API and MCP Adapter integration",
  "type": "wordpress-plugin",
  "version": "0.1.0",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "plugin",
    "mcp",
    "abilities-api",
    "ai",
    "model-context-protocol"
  ],
  "authors": [
    {
      "name": "WordPress Team",
      "homepage": "https://wordpress.org"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "scripts": {
    "lint:php": "phpcs --standard=WordPress --extensions=php includes/ mcp-adapter-plugin.php",
    "lint:php:fix": "phpcbf --standard=WordPress --extensions=php includes/ mcp-adapter-plugin.php",
    "install-deps": [
      "cd mcp-adapter-repo && composer install"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "support": {
    "issues": "https://github.com/wordpress/mcp-adapter/issues",
    "source": "https://github.com/wordpress/mcp-adapter"
  }
}
